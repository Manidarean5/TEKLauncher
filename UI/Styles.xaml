    </Style>
    <Style TargetType="Page">
        <Setter Property="FontFamily" Value="../Resources/Fonts/#Nunito"/>
    </Style>
    <Style TargetType="RadioButton">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Foreground" Value="{DynamicResource BrightGrayBrush}"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <StackPanel Orientation="Horizontal">
                        <Border Name="OuterBorder" Width="30" Height="30" Padding="2" Background="{DynamicResource BrightGrayBrush}" CornerRadius="15">
                            <Border Name="InnerBorder" Padding="4" Background="{DynamicResource DarkestDarkBrush}" CornerRadius="13">
                                <Ellipse Name="Mark" Fill="{DynamicResource OrangeBrush}">
                                    <Ellipse.RenderTransform>
                                        <ScaleTransform CenterX="9" CenterY="9" ScaleX="0" ScaleY="{Binding RenderTransform.ScaleX, ElementName=Mark}"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Border>
                        </Border>
                        <ContentPresenter Margin="10, 0, 0 ,0"/>
                    </StackPanel>
