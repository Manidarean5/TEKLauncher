<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:TEKLauncher.Controls">
    <Color x:Key="DarkestDark" R="21" G="21" B="21" A="255"/>
    <Color x:Key="DarkerDark" R="24" G="24" B="24" A="255"/>
    <Color x:Key="Darker" R="28" G="28" B="28" A="255"/>
    <Color x:Key="Dark" R="34" G="34" B="34" A="255"/>
    <Color x:Key="DarkGray" R="51" G="51" B="51" A="255"/>
    <Color x:Key="Gray" R="119" G="119" B="119" A="255"/>
    <Color x:Key="BrightGray" R="187" G="187" B="187" A="255"/>
    <Color x:Key="Bright" R="204" G="204" B="204" A="255"/>
    <Color x:Key="BrightestBright" R="221" G="221" B="221" A="255"/>
    <Color x:Key="DarkRed" R="34" G="0" B="0" A="255"/>
    <Color x:Key="Red" R="170" G="34" B="34" A="255"/>
    <Color x:Key="DarkOrange" R="160" G="100" B="0" A="255"/>
    <Color x:Key="Orange" R="255" G="160" B="0" A="255"/>
    <Color x:Key="Yellow" R="187" G="187" B="0" A="255"/>
    <Color x:Key="DarkCyan" R="0" G="102" B="102" A="255"/>
    <Color x:Key="Cyan" R="0" G="170" B="170" A="255"/>
    <SolidColorBrush x:Key="DarkestDarkBrush" Color="{StaticResource DarkestDark}"/>
    <SolidColorBrush x:Key="DarkerDarkBrush" Color="{StaticResource DarkerDark}"/>
    <SolidColorBrush x:Key="DarkerBrush" Color="{StaticResource Darker}"/>
    <SolidColorBrush x:Key="DarkBrush" Color="{StaticResource Dark}"/>
    <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGray}"/>
    <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource Gray}"/>
    <SolidColorBrush x:Key="BrightGrayBrush" Color="{StaticResource BrightGray}"/>
    <SolidColorBrush x:Key="BrightBrush" Color="{StaticResource Bright}"/>
    <SolidColorBrush x:Key="BrightestBrightBrush" Color="{StaticResource BrightestBright}"/>
    <SolidColorBrush x:Key="DarkRedBrush" Color="{StaticResource DarkRed}"/>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}"/>
    <SolidColorBrush x:Key="DarkOrangeBrush" Color="{StaticResource DarkOrange}"/>
    <SolidColorBrush x:Key="OrangeBrush" Color="{StaticResource Orange}"/>
    <SolidColorBrush x:Key="YellowBrush" Color="{StaticResource Yellow}"/>
    <SolidColorBrush x:Key="DarkCyanBrush" Color="{StaticResource DarkCyan}"/>
    <SolidColorBrush x:Key="CyanBrush" Color="{StaticResource Cyan}"/>
    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="Transparent">
                        <Controls:VectorImage x:Name="Icon" Width="{TemplateBinding Width}" Height="{TemplateBinding Width}" Foreground="{DynamicResource BrightBrush}" Source="{TemplateBinding Tag}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Icon" TargetProperty="Foreground.(SolidColorBrush.Color)">
                                        <ColorAnimation To="{StaticResource DarkOrange}" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Icon" TargetProperty="Foreground.(SolidColorBrush.Color)">
                                        <ColorAnimation To="{StaticResource Bright}" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Icon" TargetProperty="Foreground.(SolidColorBrush.Color)">
                                        <ColorAnimation To="{StaticResource Red}" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Icon" TargetProperty="Foreground.(SolidColorBrush.Color)" FillBehavior="Stop">
                                        <ColorAnimation To="{StaticResource DarkOrange}" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Icon" TargetProperty="Foreground.(SolidColorBrush.Color)">
                                        <ColorAnimation To="DarkRed" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Icon" TargetProperty="Foreground.(SolidColorBrush.Color)" FillBehavior="Stop">
                                        <ColorAnimation To="{StaticResource Bright}" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ImageButton" TargetType="Button">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Foreground" Value="{DynamicResource BrightGrayBrush}"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Name="ElementBorder" Padding="6, 3, 6, 3" Background="{DynamicResource DarkestDarkBrush}" BorderBrush="{DynamicResource BrightBrush}" BorderThickness="1.5" CornerRadius="18">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Controls:VectorImage x:Name="Icon" Width="30" Height="30" Foreground="{DynamicResource OrangeBrush}" Source="{TemplateBinding Tag}"/>
                            <ContentPresenter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="ElementBorder" TargetProperty="Background.(SolidColorBrush.Color)">
                                        <ColorAnimation To="{StaticResource Dark}" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="ElementBorder" TargetProperty="Background.(SolidColorBrush.Color)">
                                        <ColorAnimation To="{StaticResource DarkestDark}" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="ElementBorder">
                                        <ColorAnimation Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="{StaticResource DarkGray}" Duration="0:0:0.2"/>
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)" To="{StaticResource Orange}" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="ElementBorder" FillBehavior="Stop">
                                        <ColorAnimation Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="{StaticResource Dark}" Duration="0:0:0.2"/>
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)" To="{StaticResource Bright}" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="ElementBorder">
                                        <ColorAnimation Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="{StaticResource DarkRed}" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)" To="{StaticResource Red}" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="ElementBorder" FillBehavior="Stop">
                                        <ColorAnimation Storyboard.TargetProperty="Background.(SolidColorBrush.Color)" To="{StaticResource DarkestDark}" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)" To="{StaticResource Bright}" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ScrollBarLineButton" TargetType="RepeatButton">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border Background="Transparent">
                        <Path Name="Icon" Stroke="{DynamicResource BrightBrush}" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Tag" Value="T">
                            <Setter TargetName="Icon" Property="Data" Value="M2,9l7-7,7,7"/>
                        </Trigger>
                        <Trigger Property="Tag" Value="B">
                            <Setter TargetName="Icon" Property="Data" Value="M2,9l7,7,7-7"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Icon" TargetProperty="Stroke.(SolidColorBrush.Color)">
                                        <ColorAnimation To="{StaticResource Orange}" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Icon" TargetProperty="Stroke.(SolidColorBrush.Color)">
                                        <ColorAnimation To="{StaticResource Bright}" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Icon" TargetProperty="Stroke.(SolidColorBrush.Color)">
                                        <ColorAnimation To="Red" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard TargetName="Icon" TargetProperty="Stroke.(SolidColorBrush.Color)" FillBehavior="Stop">
                                        <ColorAnimation To="{StaticResource Orange}" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="ScrollBarPageButton" TargetType="RepeatButton">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RepeatButton">
                    <Border Background="Transparent"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="RTLTB" TargetType="TextBlock">
        <Setter Property="FlowDirection" Value="RightToLeft"/>
    </Style>
